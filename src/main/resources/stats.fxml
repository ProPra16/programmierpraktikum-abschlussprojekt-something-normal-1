<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.canvas.Canvas?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="gui.StatsController" alignment="CENTER">
    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="phase_label">
        <font>
            <Font name="Agency FB Bold" size="30.0" />
        </font>
    </Label>
    <Label GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="time_label">
        <font>
            <Font name="Agency FB Bold" size="30.0" />
        </font>
    </Label>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="2">code before:</Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="2">code after:</Label>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="4">test before:</Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="4">test before:</Label>
    <TextArea fx:id="code_before" editable="false" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextArea fx:id="code_after" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextArea fx:id="test_before" editable="false" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextArea fx:id="test_after" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button fx:id="next_phase" GridPane.columnIndex="1" GridPane.rowIndex="6">NEXT</Button>
    <Button fx:id="prev_phase" GridPane.columnIndex="0" GridPane.rowIndex="6">PREVIOUS</Button>
    <Button fx:id="btn_return" GridPane.rowIndex="7" GridPane.columnIndex="0">RETURN TO TDDT</Button>
    <Canvas fx:id="chart_canvas" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" disable="false" visible="true"  width="900" height="250"/>
</GridPane>
